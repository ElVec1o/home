---
import Base from '../layouts/Base.astro';
import filesData from '../data/files.json';

const files = filesData.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
const base = import.meta.env.BASE_URL;

// Group by type
const types = [...new Set(files.map(f => f.type))];
---
<Base title="Files — elvec1o">
  <h1>Files</h1>
  <p>{files.length} files available</p>

  <div class="tabs">
    <button class="tab active" data-filter="all">All</button>
    <button class="tab" data-filter="app">Apps</button>
    <button class="tab" data-filter="utility">Utilities</button>
    <button class="tab" data-filter="game">Games</button>
    <button class="tab" data-filter="vibe">Vibe Code</button>
  </div>

  <div class="file-list">
    {files.map(file => (
      <div class="file-entry" data-type={file.type} data-vibe={file.vibe ? 'true' : 'false'}>
        <div class="file-info">
          <span class="file-type">{file.type}</span>
          {file.platform && <span class="file-platform">{file.platform}</span>}
          {file.playable && <span class="file-interactive">INTERACTIVE</span>}
          {file.vibe && <span class="file-vibe">VIBE CODE</span>}
          <h3>{file.name}</h3>
          <p class="meta">{file.date} · {file.size}</p>
          <p>{file.description}</p>
          {file.screenshots && file.screenshots.length > 0 && (
            <div class="screenshots" data-gallery={file.id}>
              {file.screenshots.map((img: string, idx: number) => (
                <button class="screenshot-thumb" data-src={`${base}/img/${img}`} data-index={idx} data-gallery={file.id} onclick="openCarousel(this)">
                  <img src={`${base}/img/${img}`} alt={`${file.name} screenshot`} loading="lazy" />
                </button>
              ))}
            </div>
          )}
        </div>
        <div class="file-actions">
          {file.filename.endsWith('.jsx') && (
            <a href={`${base}/files/${file.filename.replace('.jsx', '_play.html')}`} class="play-btn" target="_blank">{file.type === 'game' ? '▶ Play Now' : '▶ Try Now'}</a>
          )}
          {file.filename.endsWith('.html') && (
            <a href={`${base}/files/${file.filename}`} class="play-btn" target="_blank">{file.type === 'game' ? '▶ Play Now' : '▶ Try Now'}</a>
          )}
          {file.isFolder ? (
            <a href={`${base}/files/${file.filename}`} class="download-btn">→ Browse</a>
          ) : (
            <a href={`${base}/files/${file.filename}`} class="download-btn" download>↓ Download</a>
          )}
        </div>
      </div>
    ))}
  </div>

  {files.length === 0 && (
    <p class="empty">No files yet. Add files to public/files/ and update src/data/files.json</p>
  )}

  <p><a href={`${base}/`}>← Back home</a></p>

  <!-- Image Carousel Overlay -->
  <div class="carousel-overlay" id="carousel">
    <div class="carousel-content">
      <button class="carousel-close" onclick="closeCarousel()">×</button>
      <button class="carousel-nav carousel-prev" onclick="carouselNav(-1)">‹</button>
      <img id="carousel-img" src="" alt="Screenshot">
      <button class="carousel-nav carousel-next" onclick="carouselNav(1)">›</button>
      <div class="carousel-counter"><span id="carousel-current">1</span> / <span id="carousel-total">1</span></div>
    </div>
  </div>
</Base>

<style>
  .tabs {
    margin: 2rem 0;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    border-bottom: 1px solid #ddd;
    padding-bottom: 0.5rem;
  }
  .tab {
    background: #fff;
    border: 1px solid #ddd;
    padding: 0.4rem 0.8rem;
    font-family: inherit;
    font-size: 0.85rem;
    cursor: pointer;
    color: #111;
  }
  .tab:hover { background: #f5f5f5; }
  .tab.active { background: #111; color: #fff; border-color: #111; }

  .file-list {
    margin: 2rem 0;
  }
  .file-entry {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-bottom: 1px solid #eee;
    gap: 1rem;
  }
  .file-info {
    flex: 1;
  }
  .file-type {
    display: inline-block;
    background: #f0f0f0;
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }
  .file-platform {
    display: inline-block;
    background: #333;
    color: #fff;
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    margin-left: 0.3rem;
    margin-bottom: 0.5rem;
  }
  .file-interactive {
    display: inline-block;
    background: #22c55e;
    color: #fff;
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    margin-left: 0.3rem;
    margin-bottom: 0.5rem;
  }
  .file-vibe {
    display: inline-block;
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
    color: #fff;
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    margin-left: 0.3rem;
    margin-bottom: 0.5rem;
  }
  .screenshots {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }
  .screenshot-thumb {
    display: block;
    width: 120px;
    height: 80px;
    overflow: hidden;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 0;
    background: none;
    cursor: pointer;
  }
  .screenshot-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s;
  }
  .screenshot-thumb:hover img {
    transform: scale(1.05);
  }

  /* Carousel Overlay */
  .carousel-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.9);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }
  .carousel-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  .carousel-content {
    position: relative;
    max-width: 90vw;
    max-height: 90vh;
  }
  .carousel-content img {
    max-width: 90vw;
    max-height: 85vh;
    object-fit: contain;
    border-radius: 8px;
  }
  .carousel-close {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: #fff;
    font-size: 2rem;
    cursor: pointer;
    padding: 0.5rem;
  }
  .carousel-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255,255,255,0.2);
    border: none;
    color: #fff;
    font-size: 2rem;
    cursor: pointer;
    padding: 1rem;
    border-radius: 50%;
    transition: background 0.2s;
  }
  .carousel-nav:hover {
    background: rgba(255,255,255,0.4);
  }
  .carousel-prev { left: -60px; }
  .carousel-next { right: -60px; }
  .carousel-counter {
    text-align: center;
    color: #fff;
    margin-top: 1rem;
    font-size: 0.9rem;
  }
  @media (max-width: 768px) {
    .carousel-prev { left: 10px; }
    .carousel-next { right: 10px; }
  }
  .file-entry h3 {
    margin: 0.3rem 0;
  }
  .file-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .download-btn, .play-btn {
    padding: 0.5rem 1rem;
    text-decoration: none;
    font-size: 0.9rem;
    white-space: nowrap;
  }
  .download-btn {
    background: #111;
    color: #fff;
  }
  .download-btn:hover {
    background: #333;
    color: #fff;
  }
  .play-btn {
    background: #22c55e;
    color: #fff;
    font-weight: bold;
  }
  .play-btn:hover {
    background: #16a34a;
    color: #fff;
  }
  .empty {
    color: #666;
    font-style: italic;
  }
  .hidden { display: none; }
</style>

<script is:inline>
  // Tab filtering
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      var filter = tab.dataset.filter;
      document.querySelectorAll('.file-entry').forEach(function(entry) {
        if (filter === 'all') {
          entry.classList.remove('hidden');
        } else if (filter === 'vibe') {
          if (entry.dataset.vibe === 'true') {
            entry.classList.remove('hidden');
          } else {
            entry.classList.add('hidden');
          }
        } else if (entry.dataset.type === filter) {
          entry.classList.remove('hidden');
        } else {
          entry.classList.add('hidden');
        }
      });
    });
  });

  // Carousel functionality - global scope
  var currentGallery = [];
  var currentIndex = 0;

  window.openCarousel = function(btn) {
    var galleryId = btn.dataset.gallery;
    var thumbs = document.querySelectorAll('[data-gallery="' + galleryId + '"][data-src]');
    currentGallery = Array.from(thumbs).map(function(t) { return t.dataset.src; });
    currentIndex = parseInt(btn.dataset.index);
    updateCarousel();
    document.getElementById('carousel').classList.add('active');
    document.body.style.overflow = 'hidden';
  };

  window.closeCarousel = function() {
    document.getElementById('carousel').classList.remove('active');
    document.body.style.overflow = '';
  };

  window.carouselNav = function(dir) {
    currentIndex += dir;
    if (currentIndex < 0) currentIndex = currentGallery.length - 1;
    if (currentIndex >= currentGallery.length) currentIndex = 0;
    updateCarousel();
  };

  function updateCarousel() {
    document.getElementById('carousel-img').src = currentGallery[currentIndex];
    document.getElementById('carousel-current').textContent = currentIndex + 1;
    document.getElementById('carousel-total').textContent = currentGallery.length;
  }

  // Close on ESC or click outside
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') window.closeCarousel();
    if (e.key === 'ArrowLeft') window.carouselNav(-1);
    if (e.key === 'ArrowRight') window.carouselNav(1);
  });

  document.getElementById('carousel').addEventListener('click', function(e) {
    if (e.target.id === 'carousel') window.closeCarousel();
  });
</script>
