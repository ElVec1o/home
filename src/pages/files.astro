---
import Base from '../layouts/Base.astro';
import filesData from '../data/files.json';

const files = filesData.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
const base = import.meta.env.BASE_URL;

// Group by type
const types = [...new Set(files.map(f => f.type))];
---
<Base title="Files — elvec1o">
  <h1>Files</h1>
  <p>{files.length} files available</p>

  <div class="tabs">
    <button class="tab active" data-filter="all">All</button>
    <button class="tab" data-filter="app">Apps</button>
    <button class="tab" data-filter="utility">Utilities</button>
    <button class="tab" data-filter="experiment">Experiments</button>
    <button class="tab" data-filter="vibe">Vibe Code</button>
  </div>

  <div class="file-list">
    {files.map(file => (
      <div class="file-entry" data-type={file.type}>
        <div class="file-info">
          <span class="file-type">{file.type}</span>
          {file.platform && <span class="file-platform">{file.platform}</span>}
          <h3>{file.name}</h3>
          <p class="meta">{file.date} · {file.size}</p>
          <p>{file.description}</p>
          {file.screenshots && file.screenshots.length > 0 && (
            <div class="screenshots">
              {file.screenshots.map((img: string) => (
                <a href={`${base}/img/${img}`} target="_blank" class="screenshot-thumb">
                  <img src={`${base}/img/${img}`} alt={`${file.name} screenshot`} loading="lazy" />
                </a>
              ))}
            </div>
          )}
        </div>
        <div class="file-actions">
          {file.filename.endsWith('.jsx') && (
            <a href={`${base}/files/${file.filename.replace('.jsx', '_play.html')}`} class="play-btn" target="_blank">▶ Play Now</a>
          )}
          {file.filename.endsWith('.html') && (
            <a href={`${base}/files/${file.filename}`} class="play-btn" target="_blank">▶ Play Now</a>
          )}
          {file.isFolder ? (
            <a href={`${base}/files/${file.filename}`} class="download-btn">→ Browse</a>
          ) : (
            <a href={`${base}/files/${file.filename}`} class="download-btn" download>↓ Download</a>
          )}
        </div>
      </div>
    ))}
  </div>

  {files.length === 0 && (
    <p class="empty">No files yet. Add files to public/files/ and update src/data/files.json</p>
  )}

  <p><a href={`${base}/`}>← Back home</a></p>
</Base>

<style>
  .tabs {
    margin: 2rem 0;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    border-bottom: 1px solid #ddd;
    padding-bottom: 0.5rem;
  }
  .tab {
    background: #fff;
    border: 1px solid #ddd;
    padding: 0.4rem 0.8rem;
    font-family: inherit;
    font-size: 0.85rem;
    cursor: pointer;
    color: #111;
  }
  .tab:hover { background: #f5f5f5; }
  .tab.active { background: #111; color: #fff; border-color: #111; }

  .file-list {
    margin: 2rem 0;
  }
  .file-entry {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
    border-bottom: 1px solid #eee;
    gap: 1rem;
  }
  .file-info {
    flex: 1;
  }
  .file-type {
    display: inline-block;
    background: #f0f0f0;
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }
  .file-platform {
    display: inline-block;
    background: #333;
    color: #fff;
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    margin-left: 0.3rem;
    margin-bottom: 0.5rem;
  }
  .screenshots {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }
  .screenshot-thumb {
    display: block;
    width: 120px;
    height: 80px;
    overflow: hidden;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  .screenshot-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s;
  }
  .screenshot-thumb:hover img {
    transform: scale(1.05);
  }
  .file-entry h3 {
    margin: 0.3rem 0;
  }
  .file-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .download-btn, .play-btn {
    padding: 0.5rem 1rem;
    text-decoration: none;
    font-size: 0.9rem;
    white-space: nowrap;
  }
  .download-btn {
    background: #111;
    color: #fff;
  }
  .download-btn:hover {
    background: #333;
    color: #fff;
  }
  .play-btn {
    background: #22c55e;
    color: #fff;
    font-weight: bold;
  }
  .play-btn:hover {
    background: #16a34a;
    color: #fff;
  }
  .empty {
    color: #666;
    font-style: italic;
  }
  .hidden { display: none; }
</style>

<script>
  document.querySelectorAll('.tab').forEach(tab => {
    tab.addEventListener('click', () => {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      const filter = tab.dataset.filter;
      document.querySelectorAll('.file-entry').forEach(entry => {
        if (filter === 'all' || entry.dataset.type === filter) {
          entry.classList.remove('hidden');
        } else {
          entry.classList.add('hidden');
        }
      });
    });
  });
</script>
